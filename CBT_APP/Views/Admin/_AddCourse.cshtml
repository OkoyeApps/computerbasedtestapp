@*@model CBT_APP.Models.CourseViewModel*@

<div>
    <a href="#modal-dialog" class="btn btn-success pull-right" data-toggle="modal">Add Course</a>
    <br />
</div>


<div class="modal fade" id="modal-dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">New Course</h4>
            </div>
            <div class="modal-body" style="clear:both">
                <div id="main">
                    <form id="courseform" action="/admin/AddCourse" method="post">
                        <label class="control-label">Course Title</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="text" id="crcname" name="Name" class="form-control" placeholder="Course Title" />
                            </div>
                        </div>
                        <label class="control-label">Course Code</label>
                        <div class="row m-b-15">
                            <div class="col-md-12">
                                <input type="text" id="crccode" name="Code" class="form-control" placeholder="Course Code" />
                            </div>
                        </div>
                    </form>
           
                </div>
                <div id="load" class="hidden">
                    <h4 style="text-align : center">Adding course, please wait...</h4>
                </div>
            </div>
            <div class="modal-footer">
                <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
                <a href="javascript:;" class="btn btn-sm btn-success" id="addcourse">Add</a>
            </div>
        </div>
    </div>
</div>